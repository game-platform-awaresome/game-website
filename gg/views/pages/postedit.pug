extends ../layout

block content
  include ../includes/notification
  section.create-post
    .container
      .row
        .col-md-offset-1.col-md-3
          span.user-avatar-box
            img(src="../../upload/"+user.avatar, alt="avatar")
          span.user-nickname-box
            p #{user.nickname}
        .col-md-5
          form(method="post", action="/posts/"+post._id+"/edit", role="form")
            .form-group
              label.control-label(for="title") 标题
              input.form-control#title(type="text", value=post.title, name="title")
            .form-group
              label.control-label(for="content") 内容
              textarea.form-control#content(name="content", rows="15") #{post.content}
            .form-group
              a.btn.btn-default(href="/posts/" + post._id) 返回
              button.btn.btn-success#btn-submit(type="submit") 提交