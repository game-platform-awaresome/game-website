extends ../layout

block content
  ol.breadcrumb
    li
      a(href="/games") 全部游戏
    li.active #{keyword}
  .container
    .row
      .panel.panel-default
        .panel-heading
          h3 #{keyword}
        .panel-body
          if games && games.length > 0
            each game in games
              .col-md-2
                .thumbnail
                  a(href="#")
                    img(src="/upload/" + game.poster, alt=game.name)
                  .caption
                    h4 #{game.name}
                    p: a.btn.btn-primary(href="/games/" + game._id, role="button") 查看详情
      ul.pagination
        - for (var i = 0; i< totalPage; i++) {
          - if (currentPage == (i + 1)) {
              li.active
                span #{currentPage}
          - }
          - else {
              li
                a(href='/search/games?' + query + '&p=' + i) #{i + 1}
          - }
        - }